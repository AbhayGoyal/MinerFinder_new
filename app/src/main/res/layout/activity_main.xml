<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <Button
        android:id="@+id/Button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:text="Predicted Data"
        android:textColor="#FFFFFF"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="navigationView"/>

    <Button
        android:id="@+id/Button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:text="Camera"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:backgroundTint="@color/black"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="  "
        android:onClick="cameraView"/>

    <Button
        android:id="@+id/Button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@android:drawable/ic_menu_report_image"
        android:text="Connection"
        android:gravity="center"
        android:backgroundTint="@color/black"
        android:textColor="#FFFFFF"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Button1"
        android:contentDescription="  "
        android:onClick="connectionView"
        />

    <Button
        android:id="@+id/Button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        android:text="Miner Data"
        android:backgroundTint="@color/black"
        android:textColor="#FFFFFF"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Button2"
        android:contentDescription="  "
        android:onClick="dataView"/>


    <Button
        android:id="@+id/Button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@android:drawable/ic_dialog_map"
        android:text="Contact Graph"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:textColor="#FFFFFF"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Button3"
        android:contentDescription="  "
        android:onClick="contactView"/>

    <Button
        android:id="@+id/Button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        android:text="Gallery"
        android:backgroundTint="@color/black"
        android:textColor="#FFFFFF"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Button4"
        android:contentDescription="  "
        android:onClick="galleryView"/>

    <Button
        android:id="@+id/Button7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@android:drawable/ic_dialog_map"
        android:text="Share Data"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:textColor="#FFFFFF"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Button5"
        android:contentDescription="  "
        android:onClick="connection2View"/>



    <Button
        android:id="@+id/ButtonLogout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:background="@android:drawable/ic_lock_power_off"
        android:backgroundTint="#FF4444"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="  "
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintWidth_percent="0.25"/>



</androidx.constraintlayout.widget.ConstraintLayout>
